<div class="section">
  <%= link_to root_path, data: { turbo_method: :get } do %>
    <i class="fa-solid fa-arrow-left fa-2xl" style="color: #ffffff;"></i>
  <% end %>
  <hr>
  <h2><%=@task.title %></h2>
</div>

<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <%=@task.title %>
      <%= link_to edit_task_path, data: {turbo_method: :get} do %>
        Edit <i class="fas fa-pencil-alt"></i>
      <% end %>
    </div>
    <div class="card-body">
      <p><%= @task.description %></p>
      <p>Avant le : <%= @task.due_date %></p>
    </div>
    <div class="card-footer">
      <%= form_for @task do |f| %>
        <%= f.label :completed %>
        <%= f.check_box :completed %>
      <% end %>

      <%= link_to task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
</div>
