<h1>this is the new task page <h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.label :due_date %>
  <%= f.date_field :due_date %>
  <%= f.submit %>
<% end %>
