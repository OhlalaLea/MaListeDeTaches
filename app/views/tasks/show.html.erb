<h1>this is the show task page</h1>

<h2><%=@task.title %></h2>
<p><%= @task.description %></p>
<p><%= @task.completed %></p>
<p><%= @task.due_date %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to edit_task_path, data: {turbo_method: :get} do %>
  <p>Edit <i class="fas fa-pencil-alt"></i></p>
<% end %>
