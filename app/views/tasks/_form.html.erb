<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.label :due_date %>
  <%= f.date_field :due_date %>
  <%= f.submit %>
<% end %>

<%= simple_form_for(task) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :completed %>
  <%= f.input :due_date %>
  <%= f.submit %>
<% end %>
